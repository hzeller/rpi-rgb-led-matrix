# LED Matrix Projects Environment Configuration
# Copy this file to .env and customize your settings

# ===============================================
# Brightness Control Settings
# ===============================================

# Default brightness level (1-100)
BRIGHTNESS_DEFAULT=60

# Minimum and maximum brightness limits
BRIGHTNESS_MIN=1
BRIGHTNESS_MAX=100

# Auto-dimming settings
BRIGHTNESS_AUTO_DIM=false
BRIGHTNESS_AUTO_DIM_TIME=22:00
BRIGHTNESS_AUTO_DIM_LEVEL=20

# Scheduled brightness changes
BRIGHTNESS_SCHEDULE_ENABLED=false

# ===============================================
# Matrix Hardware Configuration 
# ===============================================

# Matrix dimensions
MATRIX_ROWS=32
MATRIX_COLS=64
MATRIX_CHAIN_LENGTH=1
MATRIX_PARALLEL=1

# Hardware settings
MATRIX_HARDWARE_MAPPING=adafruit-hat-pwm
MATRIX_BRIGHTNESS=60

# ===============================================
# API Keys and Credentials
# ===============================================

# OpenWeather API (for weather display)
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Spotify API (for music display) 
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ===============================================
# Application Settings
# ===============================================

# Simple Clock settings
SIMPLE_CLOCK_FORMAT=12  # 12 or 24 hour format
SIMPLE_CLOCK_SHOW_SECONDS=true

# Weather Display settings  
WEATHER_LOCATION=New York,US
WEATHER_UNITS=imperial  # metric, imperial, kelvin

# Music Display settings
MUSIC_SCROLL_SPEED=1
MUSIC_SHOW_ALBUM_ART=true

# Retro Clock settings
RETRO_CLOCK_FLIP_ANIMATION=true
RETRO_CLOCK_ORANGE_INTENSITY=255