# Stock Tracker Configuration
# Copy this file to .env and customize your settings

# Alpha Vantage API Key (get free at https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Default stock symbols to track (comma-separated)
DEFAULT_STOCKS=AAPL,GOOGL,MSFT,TSLA,AMZN,NVDA,META

# Update frequency in minutes (free tier limited to 5 calls per minute)
REFRESH_RATE=5

# Display settings
SCROLL_SPEED=0.05
BRIGHTNESS=75

# Advanced Stock Tracker Settings
DISPLAY_TIME=10
CHART_DAYS=30